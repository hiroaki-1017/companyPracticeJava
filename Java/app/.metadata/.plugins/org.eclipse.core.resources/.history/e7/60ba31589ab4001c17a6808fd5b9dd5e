package test02;
import java.util.Scanner;

import test.Example007;

public class Bmi {

	public static void main(String[] args) {  
        Example007 bmiScore = new Example007();
        Scanner scan = new Scanner(System.in);
        System.out.println("BMI指数の判定プログラムです。");
        System.out.println("身長(cm) を入力してください：");
        System.out.println(">>");
        System.out.println("体重(kg) を入力してください：");
        System.out.println(">>");
        bmiScore.weight = scan.nextInt();
        bmiScore.height = scan.nextInt();
        bmiScore.showBmi();
        scan.close();
 
    }

}
