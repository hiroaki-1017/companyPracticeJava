package test03;

public class MyCalc {
	int num1re;
	int num2re;
	int result;
	String operatorRe;

	MyCalc() {
		num1re = 0;
		num2re = 0;
		operatorRe = "";
	}

	MyCalc(int num1, int num2, String operator) {
		num1re = num1;
		num2re = num2;
		operatorRe = operator;
	}

	void showResult() {
		boolean bool = true;

		if(operatorRe.equals("+")) {
			result = num1re + num2re;
		} else if(operatorRe.equals("-")) {
			result = num1re - num2re;
		} else if(operatorRe.equals("*")) {
			result = num1re * num2re;
		} else if(operatorRe.equals("/")) {
			result = num1re / num2re;
		} else {
			bool = false;
		}

		if(bool) {
			System.out.println(num1re + operatorRe + num2re + " = " + result);
		} else {
			System.out.println("計算不能です。");
		}
	}
}
